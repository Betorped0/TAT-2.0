                        <label>
                            <input type="checkbox" name="activo" value="true" id="activo" @Html.Raw((Model.ACTIVO) ? "checked=\"checked\"" : "") />
                            <span style="height:0"></span>
                        </label>
                    </div>*@

                    @Html.HiddenFor(model => model.ACTIVO)
                    @Html.HiddenFor(model => model.IMAGE)
                </div>
            </div>
        </div>
    </div>
    <br />
}
