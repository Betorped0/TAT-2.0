@model IEnumerable<TAT001.Entities.DET_APROBH>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.pagina_r = 920;
    ViewBag.carpeta_r = 500;
}

<div class="row">
    <div class="col s12 right-align">
        @Html.ActionLink("Nuevo", "CreateF", new {id=ViewBag.coCode }, new { @class = "btn-small", id = "btn_create" })
    </div>
</div>
<div class="row">
    <div class="card-panel">
        <div class="row" style="margin-bottom:0;">
            <div class="input-field col s3 m3 l3">
                <select id="selecc">
                    <option value="10" selected>10</option>
                    <option value="25">25</option>
                    <option value="50">50</option>
                    <option value="100">100</option>
                </select>
                <label id="lbl_length">Ver por página</label>
            </div>
            <div class="input-field col s5 m3 l3 offset-l6 offset-m6 offset-s4">
                <input type="text" class="global_filter" id="global_filter">
                <label for="global_filter" id="lbl_search">Buscar</label>
            </div>
        </div>
        <script>
            var elem = document.querySelector('select');
            var options = [];
            var instance = M.FormSelect.init(elem, options);
        </script>
        <script src="//code.jquery.com/jquery-1.12.4.js"></script>
        <script src="//cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>
        <script src="//cdn.datatables.net/1.10.16/js/dataTables.material.min.js"></script>
        <link href="~/Content/dataTable.css" rel="stylesheet" />
        <link href="//cdn.datatables.net/1.10.16/css/dataTables.material.min.css" rel="stylesheet" />
        <table class="table mdl-data-table striped" id="table" style="width:100%;">
            <thead>
                <tr>
                    <th class="lbl_coCode">
                        @Html.DisplayNameFor(model => model.SOCIEDAD_ID)
                    </th>
                    <th class="lbl_Puesto">
                        @Html.DisplayNameFor(model => model.PUESTOC_ID)
                    </th>
                    <th class="lbl_Version">
                        @Html.DisplayNameFor(model => model.VERSION)
                    </th>
                    <th class="lbl_Activo">
                        @Html.DisplayNameFor(model => model.ACTIVO)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.SOCIEDAD_ID)
                        </td>
                        <td>
                            @item.PUESTO.PUESTOTs.Where(t => t.SPRAS_ID == ViewBag.usuario.SPRAS_ID).First().TXT50
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.VERSION)
                        </td>
                        @if ((bool)item.ACTIVO == true)
                        {
                            <td style="align-items:center"><i class='material-icons green-text'>check</i></td>}
                        else
                        {
                            <td style="align-items:center;"><i class='material-icons red-text'>clear</i></td>}
                            <td>
                                <a href="@Url.Action("EditF", new { id = item.SOCIEDAD_ID, pid = item.PUESTOC_ID, v = item.VERSION })">
                                    <i class='material-icons green-text'>edit</i>
                                </a>
                                <a href="@Url.Action("MAFlujos", new { id = item.SOCIEDAD_ID, pid = item.PUESTOC_ID, v = item.VERSION })">
                                    <i class='material-icons black-text'>done_all</i></a>
                            </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div>
        @Html.ActionLink("Back to List", "Index", null, new { id = "btn_return" })
    </div>
    <script>
    $(document).ready(function () {
        var table = $('#table').DataTable({
            scrollX: "50vh",
            scrollY: "50vh",
            scrollCollapse: true,
            language: {
                "url": "/Scripts/lang/@ViewBag.usuario.SPRAS_ID"+".json"
            }, columnDefs: [
                {
                    targets: [1],
                    className: 'mdl-data-table__cell--non-numeric'
                }
            ],
            order: [[0, "asc"]],
            initComplete: function () {
                this.api().columns().every(function () {
                    var column = this;
                    var select = $('<select style="display:initial;" class="browser-default"><option value=""></option></select>')
                        .appendTo($(column.footer()).empty())
                        .on('change', function () {
                            var val = $.fn.dataTable.util.escapeRegex(
                                $(this).val()
                            );
                            column
                                .search(val ? '^' + val + '$' : '', true, false)
                                .draw();
                        });
                    column.cells('', column[0]).render('display').sort().unique().each(function (d, j) {
                        var val = $('<div/>').html(d).text();
                        select.append('<option value="' + val + '">' + val + '</option>');
                    });
                });
            }
        });

        var a = $('#selecc').val();
        table.page.len(a).draw();
        $('#selecc').on('change', function () {
            table.page.len(this.value).draw();
        });

        $('input.global_filter').on('keyup click', function () {
            filterGlobal();
        });

    });
    function filterGlobal() {
        $('#table').DataTable().search(
            $('#global_filter').val()).draw();
    }
    </script>
</div>
<style>
    .dataTables_length {
        display: none;
    }

    .dataTables_filter {
        display: none;
    }

    .dataTables_scrollHeadInner, .mdl-data-table {
        width: 100%;
    }
</style>
