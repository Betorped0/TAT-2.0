                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.ROL_ID, "ROL_ID", htmlAttributes: new { @class = "control-label col-md-2", @id = "lblId" })
                        @Html.DropDownList("ROL_ID", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.ROL_ID, "", new { @class = "text-danger" })
                    </div>
                    <input type="hidden" name="idx" value="@ViewBag.idi" />
                    @Html.Hidden("idx", idx as string)
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <button id="btnACr" type="submit" value="Submit" class="btn btn-default"></button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
