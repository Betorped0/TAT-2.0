@model TAT001.Models.AlertaViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.pagina_r = 540;
    ViewBag.carpeta_r = 500;
}
<style>
    .dataTables_length {
        display: none;
    }

    .dataTables_filter {
        display: none;
    }

    .dataTables_scrollHeadInner, .mdl-data-table {
        width: 100%;
    }
</style>
<link href="~/Content/dataTable.css" rel="stylesheet" />
<link href="//cdn.datatables.net/1.10.16/css/dataTables.material.min.css" rel="stylesheet" />
<script src="//code.jquery.com/jquery-1.12.4.js"></script>
<script src="//cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>
<script src="//cdn.datatables.net/1.10.16/js/dataTables.material.min.js"></script>

<div class="row">
    <div class="col s12">
        <div class="card-panel">
            <div class="row">
                <div class="col s12 right-align">
                    <a class="btn-small" id="btn_create" href="@Url.Action("Create")"></a>
                </div>
                <div class="row" style="margin-bottom:0;">
                    <div class="input-field col s3 m3 l3">
                        <select id="cmbPagAlertas">
                            <option value="10" selected>10</option>
                            <option value="25">25</option>
                            <option value="50">50</option>
                            <option value="100">100</option>
                        </select>
                        <label class="btn_length"></label>
                    </div>
                    <div class="input-field col s3 m3 l3 offset-l6 offset-m6">
                        <input type="text" class="global_filter" id="gfilterAlertas">
                        <label for="global_filter" class="lbl_search"></label>
                    </div>
                </div>
                <div style="width:100%;">
                    <table class="table mdl-data-table striped" id="tablePeriodo445" style="width:100%; overflow-x: scroll;">
                        <thead>
                            <tr>
                                <th class="lbl_alerta"></th>
                                <th class="lbl_descAlerta"></th>
                                <th class="lbl_bu"></th>
                                <th class="lbl_tipo"></th>
                                <th class="lbl_tab"></th>
                                <th class="lbl_campo"></th>
                                <th class="lbl_mensaje"></th>
                                <th class="lbl_alerta_error"></th>
                                <th class="lbl_condicion_regla"></th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.alertas)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ID)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DESCR)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SOCIEDAD_ID)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TSOL_ID)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TAB_ID)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CAMPO_ID)
                                    </td>
                                    <td>
                                       
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TIPO)
                                    </td>
                                    <td>
                                       
                                    </td>
                                    <td>
                                        <a href="@Url.Action("Edit", "Alertas", new { id=item.ID,  tab_id= item.TAB_ID })"><i class='material-icons green-text'>edit</i></a>
                                        <a href=""><i class='material-icons blue-text'>announcement</i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>
   
</div>
<script type="text/javascript" src="~/Scripts/fnCommon.js"></script>
<script>

    //---- Inicializador de componentes Materialize----
    fnCommon.materializeInit('select', 'select');

    //----- Configuracion de Tablas-----
    $(document).ready(function () {
         var root = "@Url.Content("~")";
         var lang = root+"/Scripts/lang/@Session["spras"].ToString()" + ".json";
         fnCommon.configurarTable('tablePeriodo445', '50vh', '50vh', lang, 'cmbPagAlertas','gfilterAlertas');
        });

</script>
