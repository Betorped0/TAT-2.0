                    <div class="input-field col s4 right" style="margin-bottom:0;">
                        @Html.LabelFor(model => model.ACTIVO, "ACTIVO", htmlAttributes: new { @class = "active control-label col-md-2", @id = "lblPais" })
                        @Html.ValidationMessageFor(model => model.ACTIVO, "", new { @class = "text-danger" })
                        @Html.EditorFor(model => model.ACTIVO, new { htmlAttributes = new { @class = "form-control pname material-icons green-text", @maxlength = "230", @hidden = "hidden", id = "idact" } })

