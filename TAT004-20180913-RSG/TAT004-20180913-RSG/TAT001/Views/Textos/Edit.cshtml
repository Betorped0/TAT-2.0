@{
    //ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.pagina_r = 502;
    ViewBag.carpeta_r = 500;
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="col s12 right-align">
            @Html.ActionLink("Cancelar", "Index", new { id = Model.PAGINA_ID }, new { @class = "btn-small" })
            <button type="submit" class="btn-small">Guardar<i class="material-icons right">send</i></button>
        </div>
    </div>
    <div class="row">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.PAGINA_ID)

        @Html.HiddenFor(model => model.CAMPO_ID)

        @Html.HiddenFor(model => model.SPRAS_ID)

        <div class="input-field col s6">
            @Html.EditorFor(model => model.CAMPO_ID, new { htmlAttributes = new { @disabled = "disabled" } })
            @Html.LabelFor(model => model.CAMPO_ID, htmlAttributes: new { @class = "control-label col-md-2" })
        </div>
        <div class="input-field col s6">
            @Html.EditorFor(model => model.SPRAS_ID, new { htmlAttributes = new { @disabled = "disabled" } })
            @Html.LabelFor(model => model.SPRAS_ID, htmlAttributes: new { @class = "control-label col-md-2" })
        </div>
        <div class="input-field col s12 l6">
            @Html.EditorFor(model => model.TEXTOS, new { htmlAttributes = new { @class = "form-control" } })
            @Html.LabelFor(model => model.TEXTOS, htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.ValidationMessageFor(model => model.TEXTOS, "", new { @class = "text-danger" })
        </div>

        @*<div class="form-group">
            @Html.LabelFor(model => model.ACTIVO, htmlAttributes: new { @class = "control-label col-md-2" })
