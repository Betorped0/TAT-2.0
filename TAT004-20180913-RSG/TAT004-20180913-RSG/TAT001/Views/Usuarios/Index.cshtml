                                @Html.DisplayFor(modelItem => item.ID)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NOMBRE)
                                @Html.DisplayFor(modelItem => item.APELLIDO_P)
                                @Html.DisplayFor(modelItem => item.APELLIDO_M)
                            </td>
                            <td>
