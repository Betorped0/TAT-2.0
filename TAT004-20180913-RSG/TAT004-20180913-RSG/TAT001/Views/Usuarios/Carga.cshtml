                            var sprx = true;
                        }
                        if (ema.indexOf('?') != -1) {
                            ema = ema.slice(0, -1);
                            var emax = true;
                        }//Termina identificacion

                        var addedRow = addRow(table, dataj.POS, cli, com, niv, usc, dataj.NOMBRE, dataj.APELLIDO_P, dataj.APELLIDO_M, ema, spr, dataj.PASS, dataj.mess);

