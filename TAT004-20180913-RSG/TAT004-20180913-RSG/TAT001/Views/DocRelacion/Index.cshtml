@model IEnumerable<TAT001.Entities.FACTURASCONF>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.pagina_r = 1210;
    ViewBag.carpeta_r = 500;
}
<style>
    .dataTables_length {
        display: none;
    }

    .dataTables_filter {
        display: none;
    }

    .dataTables_scrollHeadInner, .mdl-data-table {
        width: 100%;
    }
</style>

<div class="row">
    <div class="col s12 right-align">

        <a href="@Url.Action("Create", "DocRelacion")" id="btnAdd" class="waves-effect waves-light btn"></a>
        @using (Html.BeginForm("Descargar", "DocRelacion", FormMethod.Post, new { @style = "display:initial;" }))
        {
            <button id="btnExcel" name="excel" class="waves-effect waves-light btn" type="submit"></button>
        }
    </div>
</div>
<div class="card-panel">
    <div class="row" style="margin-bottom:0;">
        <div class="input-field col s3 m3 l3">
            <select id="selecc">
                <option value="10" selected>10</option>
                <option value="25">25</option>
                <option value="50">50</option>
                <option value="100">100</option>
            </select>
            <label id="lbl_length">Ver por página</label>
        </div>
        <div class="input-field col s5 m3 l3 offset-l6 offset-m6 offset-s4">
            <input type="text" class="global_filter" id="global_filter">
            <label for="global_filter" id="lbl_search">Buscar</label>
        </div>
    </div>
    <script>
        var elem = document.querySelector('select');
        var options = [];
        var instance = M.FormSelect.init(elem, options);
    </script>
    <link href="~/Content/dataTable.css" rel="stylesheet" />
    <link href="//cdn.datatables.net/1.10.16/css/dataTables.material.min.css" rel="stylesheet" />
    <script src="//code.jquery.com/jquery-1.12.4.js"></script>
    <script src="//cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>
    <script src="//cdn.datatables.net/1.10.16/js/dataTables.material.min.js"></script>

    <table class="table mdl-data-table striped" id="table" style="width:100%;">
        <thead>
            <tr>
                <th id="lblSociedadId">
                    @Html.DisplayNameFor(model => model.SOCIEDAD_ID)
                </th>
                <th id="lblPais">
                    @Html.DisplayNameFor(model => model.PAIS_ID)
                </th>
                <th id="lblTsol">
                    @Html.DisplayNameFor(model => model.TSOL)
                </th>
                <th id="lblFactura">
                    @Html.DisplayNameFor(model => model.FACTURA)
                </th>
                <th id="lblFecha">
                    @Html.DisplayNameFor(model => model.FECHA)
                </th>
                <th id="lblProveedor">
                    @Html.DisplayNameFor(model => model.PROVEEDOR)
                </th>
                <th id="lblControl">
                    @Html.DisplayNameFor(model => model.CONTROL)
                </th>
                <th id="lblAutorizacion">
                    @Html.DisplayNameFor(model => model.AUTORIZACION)
                </th>
                <th id="lblVenc">
                    @Html.DisplayNameFor(model => model.VENCIMIENTO)
                </th>
                <th id="lblFactK">
                    @Html.DisplayNameFor(model => model.FACTURAK)
                </th>
                <th id="lblEjeK">
                    @Html.DisplayNameFor(model => model.EJERCICIOK)
                </th>
                <th id="lblBill">
                    @Html.DisplayNameFor(model => model.BILL_DOC)
                </th>
                <th id="lblBell">
                    @Html.DisplayNameFor(model => model.BELNR)
                </th>
                <th id="lblImporte">
                    @Html.DisplayNameFor(model => model.IMPORTE_FAC)
                </th>
                <th id="lblPayer">
                    @Html.DisplayNameFor(model => model.PAYER)
                </th>
                <th id="lblDesc">
                    @Html.DisplayNameFor(model => model.DESCRIPCION)
                </th>
                <th id="lblSoci">
                    @Html.DisplayNameFor(model => model.SOCIEDAD)
                </th>
                <th id="lblActivo">
                    @Html.DisplayNameFor(model => model.ACTIVO)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.SOCIEDAD_ID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PAIS_ID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TSOL)
                    </td>

                    @if ((bool)item.FACTURA == true)
                    {
                        <td style="align-items:center"><i class='material-icons green-text'>check</i></td>
                    }
