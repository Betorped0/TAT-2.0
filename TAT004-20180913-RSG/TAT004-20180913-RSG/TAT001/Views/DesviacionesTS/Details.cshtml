@model TAT001.Entities.TS_CAMPO

@{
    //ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.pagina_r = 1311;
    ViewBag.carpeta_r = 500;
}

<div class="row">
    <div class="col s12 right-align">
        @*<a href="@Url.Action("Edit", "DesviacionesTS")" class="btn-small">Editar</a>*@
        <a href="@Url.Action("Index", "DesviacionesTS")" class="btn btn-default">Lista</a>
    </div>
</div>


<div class="row">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        foreach (var item in Model.TS_FORMT)
        {
            @Html.HiddenFor(model => item.SPRAS_ID)
        }


        <div class="col s6 ">
            <div class="card-panel">
                <div class="row">
                    @*@foreach (var item in Model.TS_FORMT)
                        {*@
                    <div class="form-horizontal">

                        <div class="form-group">
                            @Html.LabelFor(model => Model.TS_FORMT.Where(a => a.SPRAS_ID.Equals(Session["spras"].ToString())).FirstOrDefault().TXT100, new { @id = "lblDesc" })

                            @Html.EditorFor(model => Model.TS_FORMT.Where(a => a.SPRAS_ID.Equals(Session["spras"].ToString())).FirstOrDefault().TXT100, new { htmlAttributes = new { @class = "form-control", @disabled = "@disabled" } })


                        </div>

                    </div>
                    @*}*@
                </div>
            </div>
        </div>


        <div class="col s6 ">
            <div class="card-panel">
                <h5 id="hdTr">Traducciones</h5>
                <br />
                <div class="row">

                    @foreach (var item in Model.TS_FORMT)
                    {
                        <div class=" input-field col s12">

                            @Html.EditorFor(modelItem => item.TXT100, new { htmlAttributes = new { @disabled = "disabled" } })
                            <label for="TXT100">@item.SPRA.DESCRIPCION</label>

                        </div>
                    }

                </div>
                <div>
                    @Html.LabelFor(model => model.ACTIVO, htmlAttributes: new { @class = "control-label col-md-2", @id = "lblObliga" })

                    @if ((bool)Model.ACTIVO == true)
                    {
                        <i class='material-icons green-text'>check</i>}
                    else
                    {
                        <i class='material-icons red-text'>clear</i>}

                </div>
            </div>
        </div>

    }
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = "lblEditar" }) |
    @Html.ActionLink("Back to List", "Index", null, new { id = "lblRegresar" })
</p>

