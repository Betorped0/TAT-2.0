@model TAT001.Entities.TS_CAMPO

@{
    //ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.pagina_r = 1311;
    ViewBag.carpeta_r = 500;
}
<div class="row">
    <div class="col s12 right-align">
        <a href="@Url.Action("Edit", "DesviacionesTS", new { id = Model.ID })" id="lblEditar" class="btn btn-default">Editar</a>
    </div>
</div>

<div class="row">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        foreach (var item in Model.TS_FORMT)
        {
            @Html.HiddenFor(model => item.SPRAS_ID)
        }
        <div class="col s6 ">
            <div class="card-panel">
                <h5 id="hdTr">Traducciones</h5>
                <br />
                <div class="row">
                    @foreach (var item in Model.TS_FORM)
                    {
                        <div class="input-field col l10 m10" style="margin-bottom:0;">
                            @Html.LabelFor(model => item.LAND_ID, "LAND_ID", htmlAttributes: new { @class = "control-label col-md-2", @id = "lbl_pais" })
                            @Html.EditorFor(model => item.PAI.LANDX, new { htmlAttributes = new { @class = "form-control", @required = "", @maxlength = 50, @readonly = "readonly" } })
                        </div>
                        <div class="input-field col l10 m10" style="margin-bottom:0;">
                            @Html.LabelFor(model => item.BUKRS_ID, "BUKRS_ID", htmlAttributes: new { @class = "control-label col-md-2", @id = "lbl_sociedad" })
                            @Html.EditorFor(model => item.SOCIEDAD.BUTXT, new { htmlAttributes = new { @class = "form-control", @required = "", @maxlength = 50, @readonly = "readonly" } })
                        </div>
                    }

                    @foreach (var item in Model.TS_FORMT)
                    {
                        <div class=" input-field col s12">

                            @Html.EditorFor(modelItem => item.TXT100, new { htmlAttributes = new { @disabled = "disabled" } })
                            <label for="TXT100">@item.SPRA.DESCRIPCION</label>

                        </div>
                    }

                </div>
                <div>

                    @if ((bool)Model.ACTIVO == true)
                    {
                        <i class='material-icons green-text'>check</i>}
                    else
                    {
                        <i class='material-icons red-text'>clear</i>}
                    @Html.LabelFor(model => model.ACTIVO, htmlAttributes: new { @class = "control-label col-md-2", @id = "lblObliga" })

                </div>
            </div>
        </div>

    }
</div>
<p>
    @Html.ActionLink("Regresar", "Index", null, new { id = "lblRegresar" })
</p>

