@model TAT001.Entities.WARNING

@{
    //ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.pagina_r = 502;
    ViewBag.carpeta_r = 500;
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="col s12 right-align">
            @Html.ActionLink("Cancelar", "Index", new { id = Model.PAGINA_ID }, new { @class = "btn-small" })
            <button type="submit" class="btn-small">Guardar<i class="material-icons right">send</i></button>
        </div>
    </div>
    <div class="row">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.PAGINA_ID)

        @Html.HiddenFor(model => model.CAMPO_ID)

        @Html.HiddenFor(model => model.SPRAS_ID)

        <div class="input-field col s6">
            @Html.EditorFor(model => model.CAMPO_ID, new { htmlAttributes = new { @disabled = "" } })
            @Html.LabelFor(model => model.CAMPO_ID, htmlAttributes: new { @class = "control-label col-md-2" })
        </div>
        <div class="input-field col s6">
            @Html.EditorFor(model => model.SPRAS_ID, new { htmlAttributes = new { @disabled = "disabled" } })
            @Html.LabelFor(model => model.SPRAS_ID, htmlAttributes: new { @class = "control-label col-md-2" })
        </div>
        <div class="input-field col s6">
            @Html.TextAreaFor(model => model.WARNING1, new { @class = "materialize-textarea", @required = "required" })
            @Html.LabelFor(model => model.WARNING1, htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.ValidationMessageFor(model => model.WARNING1, "", new { @class = "text-danger" })
        </div>
        <div class="input-field col s6 ">
            @*@Html.EditorFor(model => model.POSICION, new { htmlAttributes = new { @class = "form-control" } })*@
            @*@Html.DropDownList("POSICION", null, htmlAttributes: new { @id = "sel-posi" })*@
