
@{
    ViewBag.Title = "";
    ViewBag.pagina_r = 101;
    ViewBag.carpeta_r = 100;
    Layout = "~/Views/Shared/_Layout.cshtml";

    TAT001.Models.CartaV v = (TAT001.Models.CartaV)TempData["v"];
    string monto_enviar = TempData["monto_enviar"]!=null? TempData["monto_enviar"].ToString():null;
}

<div class="row">
    <div class="row right">
        <div class="col" style="padding-right:0px">
            <a href="@Url.Action("Create", "CartaV", new { id = @ViewBag.miNum })" class="waves-effect waves-light btn-small">Regresar</a>
        </div>
        @if (v != null)
        {
            TempData["v"] = v;
            TempData["monto_enviar"] = monto_enviar;
            using (Html.BeginForm("Create", "CartaV", new { guardar_param = "guardar_desde_visualizar" }, FormMethod.Post, new { @class = "col", @style = "padding:0px" }))
            {
                <div class="col" style="padding-right:0 4px">
                    <input type="submit" id="btn_submit" value="Guardar" class="btn btn-small" />
                </div>
            }
        }
    </div>


    
</div>
<div>
    <iframe src="@ViewBag.url" width="100%" height="600px"></iframe>
</div>
