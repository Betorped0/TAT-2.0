@model TAT001.Entities.TSOPORTE

@{
    ViewBag.pagina_r = 1316;
    ViewBag.carpeta_r = 500;

    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="row right">
            <div class="col l12 m12 right">
                <button type="submit" id="btnGuardar" class="btn btn-default" ></button>
            </div>
        </div>
    </div>

    <div class="col 12 s12 ">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="card-panel">
            <div class="row">
                <div class="form-horizontal">
                    <div class="col l12 m12 s12">
                        @Html.LabelFor(model => model.ID, "ID", htmlAttributes: new { @class = "control-label col-md-2", @id = "lblId" })
                        @Html.EditorFor(model => model.ID, new { htmlAttributes = new { @class = "form-control txtIDP" } })
                        @Html.ValidationMessageFor(model => model.ID, "", new { @class = "text-danger" })
                    </div>

                    <div class="col l12 m12 s12">
                        @Html.LabelFor(model => model.DESCRIPCION, "DESCRIPCION", htmlAttributes: new { @class = "control-label col-md-2", @id = "lblDes" })
                        @Html.EditorFor(model => model.DESCRIPCION, new { htmlAttributes = new { @class = "form-control txtIDP" } })
                        @Html.ValidationMessageFor(model => model.DESCRIPCION, "", new { @class = "text-danger" })
                    </div>

                </div>
            </div>
        </div>
    </div>

}
<div class="col s12">
    <a id="btnRegresar" href="@Url.Action("Index",new { tsol = ViewBag.IdTsol })"></a>
</div>
