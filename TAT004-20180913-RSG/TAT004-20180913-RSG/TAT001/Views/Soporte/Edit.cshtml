@model TAT001.Entities.TSOPORTE

@{
    ViewBag.pagina_r = 843;
    ViewBag.carpeta_r = 500;
    //ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col s12 right-align">
        <a href="@Url.Action("Index", "Soporte")" class="btn-small">Lista</a>
    </div>
</div>
<div class="row">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="row">
            <div class="row right">
                <div class="col l12 m12 right">
                    <input type="submit" value="Editar" class="btn btn-default" />
                </div>
            </div>
        </div>

        <div class="col s6">
            <div class="card-panel">
                @Html.HiddenFor(model => model.ID)
                @Html.HiddenFor(model => model.DESCRIPCION)
                @Html.HiddenFor(model => model.ACTIVO)
                <div class="row">
                    <div class=" input-field col s12">
                        @*@Html.EditorFor(model => model.TSOPORTETs.Where(a => a.SPRAS_ID.Equals(Session["spras"].ToString())).FirstOrDefault().TXT50, new { htmlAttributes = new { @disabled = "disabled" } })
                            @Html.LabelFor(model => model.TSOPORTETs.FirstOrDefault().TXT50)*@

                        @Html.EditorFor(model => model.DESCRIPCION, new { htmlAttributes = new { @class = "form-control", @disabled = "@disabled" } })
                        @Html.LabelFor(model => model.DESCRIPCION)
                    </div>
                    <div class="input-field col l10 m10" style="margin-bottom:0;">
                        @if ((bool)Model.ACTIVO == true)
                        {
                            <i class='material-icons green-text'>check</i>}
                        else
                        {
                            <i class='material-icons red-text'>clear</i>}
                        @Html.LabelFor(model => model.ACTIVO, htmlAttributes: new { @class = "control-label col-md-2 active", @id = "lbl_Activo" })
                    </div>
                </div>
            </div>
        </div>

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @*@Html.HiddenFor(model => model.ID)*@
            @*@Html.HiddenFor(model => model.DESCRIPCION)*@


            <div class="col s6">
                <div class="card-panel">
                    <h5>Traducciones</h5>
                    <div class="row">
                        <div class="input-field col l10 m10" style="margin-bottom:0;">
                            @Html.Editor("EN", new { htmlAttributes = new { @class = "form-control", @maxlength = "50" } })
                            @Html.LabelFor(model => model.DESCRIPCION, htmlAttributes: new { @class = "control-label col-md-2", @id = "lbl_DscEN" })
                        </div>
                        <div class="input-field col l10 m10" style="margin-bottom:0;">
                            @Html.Editor("ES", new { htmlAttributes = new { @class = "form-control", @maxlength = "50" } })
                            @Html.LabelFor(model => model.DESCRIPCION, htmlAttributes: new { @class = "control-label col-md-2", @id = "lbl_DscES" })
                        </div>
                        <div class="input-field col l10 m10" style="margin-bottom:0;">
                            @Html.Editor("PT", new { htmlAttributes = new { @class = "form-control", @maxlength = "50" } })
                            @Html.LabelFor(model => model.DESCRIPCION, htmlAttributes: new { @class = "control-label col-md-2", @id = "lbl_DscPT" })
                        </div>

                        <div class="row right">
                            <div class="col s12">
                                <input type="submit" value="Guardar" class="btn btn-default" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<div>
    @Html.ActionLink("Back to List", "Index", new { tsol = Model.ID, tsopo = Model.DESCRIPCION })
</div>
