@model TAT001.Entities.TSOPORTE

@{
    ViewBag.pagina_r = 1315;
    ViewBag.carpeta_r = 500;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col s12 right-align">
        <a href="@Url.Action("Edit", "Soporte", new { id = Model.ID })" id="btnEditar" class="btn btn-default">Editar</a>
    </div>
</div>

<div class="row">
    @using (Html.BeginForm())
    {
        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="row">
                <div class="col s6">
                    <div class="card-panel">
                        <div class="row">
                            <div class="input-field col s12">
                                @Html.EditorFor(model => model.ID, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                @Html.LabelFor(model => model.ID, htmlAttributes: new { @class = "control-label col-md-2", @id = "lblID" })
                            </div>
                            <div class="input-field col s12">
                                @Html.EditorFor(model => model.DESCRIPCION, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                @Html.LabelFor(model => model.DESCRIPCION, htmlAttributes: new { @class = "control-label col-md-2", @id = "lblDes" })
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col s6 right">
                    <div class="card-panel">
                        <h5>Traducciones</h5>
                        <br />
                        <div class="row">
                            @foreach (var item in Model.TSOPORTETs)
                            {
                                <div class=" input-field col s12">
                                    @Html.EditorFor(modelItem => modelItem.DESCRIPCION, new { htmlAttributes = new { @disabled = "disabled" } })
                                    <label for="">@item.SPRA.DESCRIPCION</label>
                                </div>
                            }

                        </div>
                        <div class="right">
                            @if ((bool)Model.ACTIVO == true)
                            {
                                <i class='material-icons green-text'>check</i>}
                            else
                            {
                                <i class='material-icons red-text'>clear</i>}
                            @Html.LabelFor(model => model.ACTIVO, htmlAttributes: new { @class = "control-label col-md-2", @id = "lblObliga" })
                        </div>
                        <br />
                        <br />
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<div class="col s12">
    <a id="btnRegresar" href="@Url.Action("Index")"></a>
</div>
